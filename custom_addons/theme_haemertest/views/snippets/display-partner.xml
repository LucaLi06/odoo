<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- template for our snippet -->
    <template id="display_partner" name="Display Partner - Dynamic">
        <section class="display-partner">
            <div class="container">
                <div class="text-center py-5">
                    <h2 class="h1">They trust us</h2>
                </div>

                <!-- element to store list of cities using JS -->
                <div class="row justify-content-center" id="ht-partner-row"/>
            </div>
        </section>
    </template>

    <!-- To be used in JS for snippet options -->
    <template id="display_partner_options" inherit_id="website.snippet_options">
        <xpath expr="//div[@data-js='Box']" position="before">
            <div data-js="  DisplayPartnerOptions" data-selector=".display-partner" data-drop-in=".o_mega_menu nav">
            </div>
        </xpath>
    </template>
</odoo>